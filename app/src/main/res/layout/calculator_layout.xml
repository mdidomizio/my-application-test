<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/numberGroup1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/resultOutput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="........"
            />
    </LinearLayout>

    <Button
        android:id="@+id/number7Btn"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:text="7"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/numberGroup1"
        app:layout_constraintStart_toStartOf="@id/numberGroup1"
        />
    <Button
        android:id="@+id/number8Btn"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:text="8"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toBottomOf="@id/numberGroup1"
        app:layout_constraintStart_toEndOf="@id/number7Btn"
        />

    <Button
        android:id="@+id/number9Btn"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:text="9"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toBottomOf="@id/numberGroup1"
        app:layout_constraintStart_toEndOf="@id/number8Btn"
        />

    <Button
        android:id="@+id/additionBtn"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:text="+"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toBottomOf="@id/numberGroup1"
        app:layout_constraintStart_toEndOf="@id/number9Btn"
        />

    <Button
        android:id="@+id/number4Btn"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:text="4"
        app:layout_constraintStart_toStartOf="@+id/number7Btn"
        app:layout_constraintTop_toBottomOf="@id/additionBtn" />

    <Button
        android:id="@+id/number5Btn"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:text="5"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toBottomOf="@+id/number7Btn"
        app:layout_constraintStart_toEndOf="@id/number4Btn"

        />

    <Button
        android:id="@+id/number6Btn"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:text="6"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toBottomOf="@+id/number7Btn"
        app:layout_constraintStart_toEndOf="@id/number5Btn"

        />

    <Button
        android:id="@+id/subtractionBtn"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:text="-"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toBottomOf="@+id/number7Btn"
        app:layout_constraintStart_toEndOf="@id/number6Btn"

        />
    <Button
        android:id="@+id/number1Btn"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:text="1"
        app:layout_constraintStart_toStartOf="@+id/number4Btn"
        app:layout_constraintTop_toBottomOf="@id/subtractionBtn" />
    <Button
        android:id="@+id/number2Btn"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:text="2"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toBottomOf="@+id/number4Btn"
        app:layout_constraintStart_toEndOf="@id/number1Btn"
        />

    <Button
        android:id="@+id/number3Btn"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:text="3"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toBottomOf="@+id/number4Btn"
        app:layout_constraintStart_toEndOf="@id/number2Btn"
        />

    <Button
        android:id="@+id/multiplicationBtn"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:text="*"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toBottomOf="@+id/number4Btn"
        app:layout_constraintStart_toEndOf="@id/number3Btn"
        />

    <Button
        android:id="@+id/number0Btn"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:text="0"
        app:layout_constraintStart_toStartOf="@+id/number1Btn"
        app:layout_constraintTop_toBottomOf="@id/multiplicationBtn"
        />
    <Button
        android:id="@+id/dotBtn"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:text="."
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toBottomOf="@+id/number1Btn"
        app:layout_constraintStart_toEndOf="@id/number1Btn"
        />
    <Button
        android:id="@+id/equalBtn"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:text="="
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toBottomOf="@+id/number1Btn"
        app:layout_constraintStart_toEndOf="@id/dotBtn"
        />
    <Button
        android:id="@+id/divideBtn"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:text="/"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toBottomOf="@+id/number1Btn"
        app:layout_constraintStart_toEndOf="@id/equalBtn"
        />


</androidx.constraintlayout.widget.ConstraintLayout>